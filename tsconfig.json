{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./dist",

    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
